{
  "name": "TDZ Facebook Tool",
  "version": "1.0",
  "description": "Nhập/Xuất fbtool.json sử dụng để login.",
  "manifest_version": 3,
  "permissions": [
    "cookies",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.facebook.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo/16.png",
      "32": "logo/32.png",
      "48": "logo/48.png",
      "64": "logo/64.png",
      "128": "logo/128.png"
    }
  },
  "icons": {
    "16": "logo/16.png",
    "32": "logo/32.png",
    "48": "logo/48.png",
    "64": "logo/64.png",
    "128": "logo/128.png"
  }
}